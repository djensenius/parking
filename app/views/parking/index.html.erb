<h4>Register Vehicle</h4>
<div class="row">
    <%= form_with scope: :parking, url: "/parking", class: "col s12", id: "parking-form", local: true do |form| %>
      <% if @parking.errors.any? %>
        <div class="row">
          <div class="col s12 m12">
            <div class="card red darken-1">
              <div class="card-content white-text"  id="error_explanation">
                <span class="card-title">Error saving registration</span>
                <ul>
                  <% @parking.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="row">
        <div class="input-field col s6">
          <%= form.label :code, "Code Number" %>
          <%= form.text_field :code, class: "validate" %>
        </div>
        <div class="input-field col s6">
          <%= form.label :unit, "Unit Number" %>
          <%= form.text_field :unit, class: "validate" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= form.label :make, "Vehicle Make" %>
          <%= form.text_field :make, class: "validate" %>
        </div>
        <div class="input-field col s6">
          <%= form.label :color, "Vehicle Colour" %>
          <%= form.text_field :color, class: "validate" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= form.label :license, "License Plate" %>
          <%= form.text_field :license, class: "validate" %>
        </div>
        <div class="input-field col s6">
          <%= form.label :nights, "Number of Nights" %>
          <%= form.text_field :nights, class: "validate" %>
        </div>
      </div>
      <div class="row">
        <button id="parking-button" class="waves-effect waves-light btn"><i class="material-icons right">directions_car</i>Register</button>
      </div>
    <% end %>
  </div>
