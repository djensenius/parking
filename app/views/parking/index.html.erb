<h4>Register Vehicle</h4>
<div class="row">
    <%= form_with scope: :parking, url: "/parking", class: "col s12", id: "parking-form", local: true do |form| %>
      <% if @parking.errors.any? %>
        <div class="row">
          <div class="col s12 m12">
            <div class="card red darken-1">
              <div class="card-content white-text"  id="error_explanation">
                <span class="card-title"><%= I18n.t("parking.form.error") %></span>
                <ul>
                  <% @parking.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <%= csrf_meta_tags %>
      <div class="row">
        <div class="input-field col s6">
          <%= form.label :start_date, I18n.t("parking.form.start_date") %>
          <%= form.text_field :start_date, class: "validate, start_date" %>
        </div>
        <div class="input-field col s6">
          <%= form.label :end_date, I18n.t("parking.form.end_date") %>
          <%= form.text_field :end_date, class: "validate, end_date" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= form.label :code, I18n.t("parking.form.code") %>
          <%= form.text_field :code, class: "validate" %>
        </div>
        <div class="input-field col s6">
          <%= form.label :unit, I18n.t("parking.form.unit") %>
          <%= form.number_field :unit, class: "validate" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= form.label :make, I18n.t("parking.form.make") %>
          <%= form.text_field :make, class: "validate" %>
        </div>
        <div class="input-field col s6">
          <%= form.label :color, I18n.t("parking.form.color") %>
          <%= form.text_field :color, class: "validate" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= form.label :license, I18n.t("parking.form.license") %>
          <%= form.text_field :license, class: "validate" %>
        </div>
        <div class="input-field col s6">
          <%= form.label :contact, I18n.t("parking.form.contact") %>
          <%= form.email_field :contact, class: "validate" %>
        </div>
      </div>
      <div class="row">
        <button id="parking-button" class="waves-effect arrow-background-orange btn">
          <i class="material-icons right">directions_car</i>
          <%= I18n.t("parking.form.button") %>
        </button>
      </div>
      <div class="row">
      <div class="col s12 m12">
        <div class="card-panel arrow-background-green">
          <span class="white-text"><%= I18n.t("parking.form.code_tip") %></span>
        </div>
      </div>
    </div>
    <% end %>
  </div>
